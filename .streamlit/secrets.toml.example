# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your actual values
# For Streamlit Cloud: Add these in the Secrets section of your app settings
# For local development: You can use .env file instead

# AI Configuration
GEMINI_API_KEY = "your_gemini_api_key_here"

# Turso Database
TURSO_DB_URL = "libsql://your-database-name.turso.io"
TURSO_DB_AUTH_TOKEN = "your_turso_auth_token"

# Twilio Configuration
TWILIO_ACCOUNT_SID = "your_twilio_account_sid"
TWILIO_AUTH_TOKEN = "your_twilio_auth_token"
TWILIO_PHONE_NUMBER = "+1234567890"

# Email Configuration
EMAIL_HOST_USER = "your_email@gmail.com"
EMAIL_HOST_PASSWORD = "your_gmail_app_password"
SMTP_SERVER = "smtp.gmail.com"
SMTP_PORT = 465

